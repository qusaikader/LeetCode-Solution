JAVA:
class Solution {
    public String addBinary(String a, String b) {
        String result = "";
        StringBuffer one = new StringBuffer(a);
        StringBuffer two = new StringBuffer(b);
        one.reverse();
        two.reverse();
        a = one.toString();
        b = two.toString();
        
        if (a.length() < b .length()){
            int diff = b.length() - a.length();
            for(int i = 0;i<diff;i++){
                a+='0';
            }
        }
        else if(b.length() < a.length()){
            int diff = a.length() - b.length();
            for(int i = 0;i<diff;i++){
                b+='0';
                }
            }
        int carry = 0;
        int i = 0;
        while(i<=a.length()-1){
            char m = a.charAt(i);
            char n = b.charAt(i);
            
            if((m=='0') && (n == '0')){
                if(carry!=0){
                    result+='1';
                    carry = 0;
                        
                }
                else{
                    result+='0';
                }
            }
            else if((m == '1') && (n == '0')){
                if(carry!=0){
                    result+='0';
                }
                else{
                    result+='1';
                }
            }
            else if((m == '0') && (n == '1')){
                if(carry!=0){
                    result+='0';
                }
                else{
                    result+='1';
                }
            }
            else{
                if(carry!=0){
                    result+='1';
                }
                else{
                    result+='0';
                    carry = 1;
                }
            }
            i++;
        }
        if(carry!=0){
            result+='1';
        }
        
        
        
        StringBuffer three = new StringBuffer(result);
        three.reverse();
        return three.toString();
    
        
        }
    }

